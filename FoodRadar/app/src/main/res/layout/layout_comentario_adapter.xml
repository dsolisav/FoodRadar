<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profilepic"
            android:background="@drawable/rounded_corners"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:layout_marginRight="20dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/nombreComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de usuario"
                android:textStyle="bold"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/calificacionComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5*"
                android:textColor="@color/naranjaPrincipal"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24-10-2024"
                android:id="@+id/fechaComentario"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/contenidoComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La comida es muy buena y el tiempo de entrega es adecuado para lo que se sirve. Fui con mi familia y todos quedamos súper contentos con la comida y el servicio. ¡Recomendados!"
        android:justificationMode="inter_word"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        >
        <ImageView
            android:id="@+id/imagenComentario"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/rounded_image_comentarios"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:layout_margin="5dp"
            android:src="@drawable/restaurant"
            />

    </LinearLayout>

</LinearLayout>
