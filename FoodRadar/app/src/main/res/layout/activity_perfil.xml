<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/grayBackground"
    android:padding="20dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:textColor="@color/textoPrincipal"
        android:textAlignment="center"
        android:textSize="25sp"
        android:padding="20dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners"
        android:padding="20dp"
        android:layout_marginBottom="30dp"
        >
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            android:src="@drawable/profilepic"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"

            />

        <TextView
            android:id="@+id/textUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario"
            android:textColor="@color/textoPrincipal"
            android:textSize="20sp"
            android:textAlignment="center"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"


        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"

            >
            <TextView
                android:id="@+id/textGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/textoPrincipal"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                />
            <View
                android:id="@+id/separator1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"

                android:background="#BDBDBD"
                android:layout_below="@id/textGeneral"
                />
            <RelativeLayout
                android:id="@+id/layoutInfoCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator1"
                android:padding="20dp"
                >
                <TextView
                    android:id="@+id/textInfoCuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Información de la cuenta"
                    android:textColor="@color/textoPrincipal"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="2dp"
                    />
                <TextView
                    android:id="@+id/descInfoCuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cambiar tu información básica"
                    android:layout_below="@id/textInfoCuenta"
                    android:padding="2dp"
                    android:textColor="@color/textoSecundario"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/separator2"
                android:layout_width="match_parent"
                android:layout_height="1dp"


                android:background="#BDBDBD"
                android:layout_below="@id/layoutInfoCuenta"
                />
            <RelativeLayout
                android:id="@+id/layoutContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator2"
                android:padding="20dp"
                >
                <TextView
                    android:id="@+id/textContrasena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:textColor="@color/textoPrincipal"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="2dp"
                    />
                <TextView
                    android:id="@+id/descContrasena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cambiar tu contraseña"
                    android:layout_below="@id/textContrasena"
                    android:padding="2dp"
                    android:textColor="@color/textoSecundario"
                    />
            </RelativeLayout>




        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:padding="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerrar sesión"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/textoPrincipal"

                />




        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
